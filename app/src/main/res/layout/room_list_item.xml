<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/picCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:padding="28dp"
        android:layout_margin="22dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"

        app:cardCornerRadius="25dp"

        >
            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/demodp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/textCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:padding="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="22dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picCard"
        app:cardBackgroundColor="@color/white"

        app:cardCornerRadius="25dp"

        >
        <LinearLayout
            android:id="@+id/textlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/pphoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foregroundGravity="center"
                    app:layout_constraintEnd_toStartOf="@id/textline1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="250dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    >   <ImageView
                    android:id="@+id/dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/demodp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:text="Vikas"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintStart_toEndOf="@id/pphoto"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/textline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/textline1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="58dp"
            android:layout_marginTop="8dp"
            android:text="Chaudhary"
            android:textColor="@color/black"
            android:textSize="25dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>